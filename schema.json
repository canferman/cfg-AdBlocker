{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://local/cfg-adblocker/schema.json",
  "title": "cfg-AdBlocker Storage Schema",
  "type": "object",
  "additionalProperties": true,
  "properties": {
    "enabled": { "type": "boolean", "default": true },
    "safeMode": { "type": "boolean", "default": false },
    "version": { "type": "integer", "minimum": 1 },
    "allowlist": { "type": "array", "items": { "type": "string" } },
    "blocklist": { "type": "array", "items": { "type": "string" } },
    "logs": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": true,
        "properties": {
          "ts": { "type": "number" },
          "url": { "type": "string" },
          "ruleId": { "type": "string" },
          "name": { "type": "string" },
          "action": { "type": "string" },
          "meta": {}
        }
      }
    },
    "localJsLibrary": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "title", "lastImportedAt", "size", "hash", "content"],
        "properties": {
          "id": { "type": "string" },
          "title": { "type": "string" },
          "lastImportedAt": { "type": "number" },
          "size": { "type": "number" },
          "hash": { "type": "string" },
          "handleId": { "type": "string" },
          "content": { "type": "string" }
        }
      }
    },
    "rules": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["id", "name", "enabled", "pattern", "scope", "priority", "runAt", "world"],
        "properties": {
          "id": { "type": "string" },
          "name": { "type": "string" },
          "enabled": { "type": "boolean" },
          "pattern": { "type": "string" },
          "excludePatterns": { "type": "array", "items": { "type": "string" } },
          "scope": { "type": "string", "enum": ["DOMAIN", "URL", "PATTERN"] },
          "priority": { "type": "integer", "default": 100 },
          "runAt": { "type": "string", "enum": ["document_start", "document_end", "document_idle"], "default": "document_start" },
          "world": { "type": "string", "enum": ["ISOLATED", "MAIN"], "default": "ISOLATED" },
          "css": { "type": "string" },
          "cssFiles": { "type": "array", "items": { "type": "string" } },
          "js": { "type": "string" },
          "jsFiles": { "type": "array", "items": { "type": "string" } },
          "localJs": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["title", "lastImportedAt", "size", "hash", "content"],
              "properties": {
                "title": { "type": "string" },
                "lastImportedAt": { "type": "number" },
                "size": { "type": "number" },
                "hash": { "type": "string" },
                "handleId": { "type": "string" },
                "content": { "type": "string" }
              }
            }
          },
          "safeMode": { "type": "boolean" },
          "notes": { "type": "string" }
        }
      }
    }
  },
  "required": ["enabled", "version", "rules"]
}
